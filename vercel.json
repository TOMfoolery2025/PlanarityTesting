{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r requirements.txt" 
      }
    }
  ],
  "staticFiles": {
    "directory": "./" 
  },
  "rewrites": [
    { "source": "/", "destination": "/index.html" },

    { "source": "/script.js", "destination": "/script.js" },
    { "source": "/favicon.ico", "destination": "/favicon.ico" },

    { "source": "/planarity", "destination": "api/index.py" }
  ]
}
