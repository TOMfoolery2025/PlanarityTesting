{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "/public/index.html"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/index.py" 
            /* NOTE: This should map to the file name, not just the path */
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}

